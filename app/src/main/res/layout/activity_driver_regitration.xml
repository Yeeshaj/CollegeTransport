<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dellpc.collegetransport.driverRegitration"
    android:background="#868383">

        <ImageView
        android:id="@+id/iv"
        android:layout_width="167dp"
        android:layout_height="157dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="211dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="201dp" />
       <android.support.design.widget.TextInputEditText
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:hint="Driver id"
        android:id="@+id/id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
           android:textColorHint="#000000">

       </android.support.design.widget.TextInputEditText>
       <android.support.design.widget.TextInputEditText
        android:layout_width="174dp"
        android:layout_height="50dp"
        android:hint="Name"
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="121dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
           android:textColorHint="#000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:hint="Email"
        android:id="@+id/email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="378dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textColorHint="#000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:hint="Phone NO"
        android:id="@+id/phone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="191dp"
        android:layout_marginLeft="16dp"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="351dp"
        android:layout_height="67dp"
        android:hint="Address"
        android:id="@+id/address"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="291dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="17dp"
        android:textColorHint="#000000"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:background="@drawable/capture2"
        android:onClick="click"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="209dp"
        android:layout_marginLeft="226dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="245dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="174dp"
        android:layout_height="73dp"
        android:background="@drawable/submit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="422dp"
        android:layout_marginLeft="105dp"
        android:onClick="submit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="105dp" />

</android.support.constraint.ConstraintLayout>
