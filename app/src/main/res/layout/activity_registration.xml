<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ed1c4"
    tools:context="com.example.dellpc.collegetransport.Registration">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="387dp"
        android:layout_height="81dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#020b72"
        android:layout_marginLeft="-107dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="219dp"
        android:layout_height="103dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="412dp"
        android:layout_marginLeft="83dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#020b72"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="317dp"
        android:layout_height="314dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="98dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="show"
            android:text="Bus Registration" />

        <RadioButton
            android:id="@+id/rbstudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="show"
            android:text="Student Registration" />

        <RadioButton
            android:id="@+id/rbview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="show"
            android:text="View Bus" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="show"
            android:text="Bus Allotment" />

        <RadioButton
            android:id="@+id/rbdriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="show"
            android:text="Driver Registration" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
