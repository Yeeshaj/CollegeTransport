<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dellpc.collegetransport.busRegistration"
    android:background="@drawable/backg">
    <android.support.design.widget.TextInputEditText
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:id="@+id/busno"
        android:hint="BUS NO"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textColorHint="#050505"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:id="@+id/driverid"
        android:hint="Driver ID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#050505"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:id="@+id/totalseats"
        android:hint="Total Seats"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="134dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#050505"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:id="@+id/availableseats"
        android:hint="Available Seats"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="191dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#050505"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:id="@+id/routeto"
        android:hint="Route To"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="258dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#050505"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:id="@+id/routefrom"
        android:hint="Route From"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="332dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#050505"/>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:background="@drawable/submit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="117dp"
        android:onClick="submit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="117dp" />

</android.support.constraint.ConstraintLayout>
