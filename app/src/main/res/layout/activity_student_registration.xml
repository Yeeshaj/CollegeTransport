<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dellpc.collegetransport.driverRegitration"
    android:background="#a0a1a1">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="122dp"
        android:layout_height="134dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="246dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnclick"
        android:layout_width="103dp"
        android:layout_height="93dp"
        android:background="@drawable/capture2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="265dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="click" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="241dp"
        android:layout_height="83dp"
        android:background="@drawable/submit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="submit"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Student ID"
        android:id="@+id/stdid"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Student Name"
        android:id="@+id/stdname"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="107dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Student Address"
        android:id="@+id/stdadd"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter Student Contact No."
        android:id="@+id/stdcontact"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColorHint="#000000"/>

</android.support.constraint.ConstraintLayout>
